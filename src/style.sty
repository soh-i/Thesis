% 表紙用行間広め定義
\newenvironment{lineskiptitle}{%
  \baselineskip = 1.5cm
}

% 表紙の定義（日本語）
\def\jmaketitle{\par
  \begingroup
  \vspace{2cm}\par
  \@jmaketitle
  \endgroup
}
\def\@jmaketitle{%
  \thispagestyle{empty}
  \begin{center}
  	{\LARGE \@jsyear 年度 }
	{\LARGE \@jclass}
	\vfill
	\begin{lineskiptitle}		
	  {\LARGE \@jtitle}
	\end{lineskiptitle}
	\vfill
		{\LARGE \@juniv\ \@jfaculty}
		\vspace{0.5cm}\par
		       {\LARGE \@jauthor}
		       \vspace{2cm}\par
		       %{\Large 指導教員：\ \@jadvisor\ \@jposition}
  \end{center}
  \newpage
  \pagenumbering{roman}
}

% アブストラクト用行間広め設定
\newenvironment{lineskipabst}{%
	\baselineskip = 1cm
}

% アブストラクトの定義（日本語）
\newenvironment{jabstract}{%
  \begin{center}
	\vspace{1cm}\par
	\begin{lineskipabst}
      {2013年度 卒業論文} \\
      \vspace{1cm}\par 
      {\@jtitle}\\
      {\@juniv\ \@jfaculty}
      \par
      {\@jauthor}
      \par
	  \vspace{1cm}\par
	  {\bf 論文要旨}\\
	\end{lineskipabst}
  \end{center}
  \parindent=1zw
  \ifjapanese \else \renewcommand{\baselinestretch}{1.15}\selectfont \fi
}{
  \\
  \\
	  {\bf キーワード:} \@jkeyword
	  \ifjapanese \parindent=1zw \else \parindent=1.6zw \fi
	  \renewcommand{\baselinestretch}{1.0}\selectfont
}

% 目次環境再定義
\renewcommand{\tableofcontents}{%
	\section*{\contentsname}
	\@starttoc{toc}
	\newpage
}

% 図目次環境再定義
\renewcommand{\listoffigures}{%
	\section*{\listfigurename}
	\@starttoc{lof}
	\newpage
}

% 表目次環境再定義
\renewcommand{\listoftables}{%
	\section*{\listtablename}
	\@starttoc{lot}
	\newpage
}

% 謝辞環境の作成
\newenvironment{acknowledgment}{%
	\addcontentsline{toc}{chapter}{\acknowledgmentname}
	\chapter*{\acknowledgmentname}
}{}

% 参考文献環境の作成
\newenvironment{bib}[1][100]{%
  \addcontentsline{toc}{chapter}{\bibname}
}{}

